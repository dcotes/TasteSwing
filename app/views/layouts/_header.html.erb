<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <!-- <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a> -->
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><%= link_to "About", welcome_about_path %></li>
        <li class="nav-link"><a href="javascript:void(0)">Contact</a></li>       
        <% if current_user %>       
          <li class="nav-link">
            <div class="navigation-tools">
              <div class="search-bar">
                <form role="search">
                  <input type="search" placeholder="Enter Search" />
                  <button type="submit">
                  <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png" alt="Search Icon">
                  </button>
                </form>
              </div>
            </div>
          </li>  
          <li class="nav-link"><%= link_to "Create event", new_event_path %></li>
          <li class="nav-link"><%= link_to "Add bottle", new_bottle_path %></li>
          <li class="nav-link more"><%= link_to current_user.fname %>
            <ul class="submenu">
              <li><%= link_to "Log out", session_path("current"), method: :delete %></li>
              <li><%= link_to "Profile", user_path(current_user) %></li>
            </ul>
          </li>


          <!-- sliding toggle bar -->
          <li class="nav-link">
            <button type="button" class="js-menu-trigger sliding-panel-button">
              <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/menu-white.png" alt="Menu Icon">
            </button>

          </li>

            
            <!-- end of sliding toggle bar -->
        <% else %>
          <li class="nav-link">
            <%= link_to "Taste Swing",  welcome_index_path %>
          </li>       
          <li class="nav-link">
            <label for="modal-1">
              <a>Log In</a>
            </label>
          </li>
          <li class="nav-link">
           <%= link_to "Sign up",  new_user_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
  
   <div class="modal">

    <input class="modal-state" id="modal-1" type="checkbox" />
    <div class="modal-fade-screen">
      <div class="modal-inner">
        <div class="modal-close" for="modal-1"></div>
          <%= form_tag sessions_path do %>
            <h1>Log in</h1>
            <div>
              <%= label_tag "email" %><br/>
              <%= text_field_tag "email" %>
            </div>
            <div>
              <%= label_tag :password %><br/>
              <%= password_field_tag :password %>
            </div>
            <div>
              <%= submit_tag "Log In" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div> 

     <div class="modal">

    <input class="modal-state" id="modal-2" type="checkbox" />
    <div class="modal-fade-screen">
      <div class="modal-inner">
        <div class="modal-close" for="modal-2"></div>
         <%= form_tag users_path,  methods=> :post do %>
            <h1>sign up</h1>
            <div>
              <%= label_tag "email" %><br/>
              <%= text_field_tag "email" %>
            </div>
            <div>
              <%= label_tag "fname" %><br/>
              <%= text_field_tag "fname" %>
            </div>
            <div>
              <%= label_tag :lname, "last name" %><br/>
              <%= text_field_tag "lname" %>
            </div>
            <div>
              <%= label_tag :password, "password" %><br/>
              <%= password_field_tag :password %>
            </div>
            <div>
              <%= label_tag "Re-type password" %><br/>
              <%= password_field_tag "password_confirmation" %>
            </div>
            <div>
              <%= label_tag "avatar_url", "Profile image (url)" %><br/>
              <%= text_field_tag "avatar_url" %>
            </div>

            <div>
              <%= label_tag "description", "Profile description" %><br/>
              <%= text_field_tag "description" %>
            </div>
              <div>
              <%= label_tag "birthday", "Birthday" %><br/>
              <%= text_field_tag "birthday" %>
            </div>

            <div>
              <%= submit_tag "sign up" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div> 
        

  
  <!-- sliding nav bar -->
  <nav class="js-menu sliding-panel-content">
    <ul>
      <li><%= link_to "Create event", new_event_path %></li>
      <li><%= link_to "Add bottle", new_bottle_path %></li>
      <li><%= link_to "Search bottles", bottles_path %></li>
    </ul>
  </nav>
  <div class="js-menu-screen sliding-panel-fade-screen"></div>

 <!-- sliding nav bar -->
   
</header>