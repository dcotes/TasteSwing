<h1>SHOW EVENT </h1>
<%= link_to "Edit Event", edit_event_path(@event) %>

<h1><%= @event.title %></h1>
<hr>
<%= @event.venue %><br>
<%= @event.date %><br>
<%= @event.duration %><br>
<%= @event.description%><br>
<%= @event.flights.size %><br>
	<% if @event.flights.size > 0 %>
		<% @event.bottles.each do |bottle| %>
			<h2><%= bottle.name %></h2>
			<p><%= link_to 'delete',  {:controller => "events", :action => "delete_bottle", :bottle_id => bottle.id, :event_id => @event.id } %></p>
			<p><%= bottle.vintage %></p><br>
		<% end %>
	<% else %>
		<p>ADD BOTTLE</p>
	<% end %>