<div class="form">
  <h2>CREATE NEW EVENT </h2>

  <%= form_for @event do |f| %>

    <% if @event.errors.any? %>
      <div>
        <%= pluralize(@event.errors.count, "error") %> prevented the account from being created:
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label "title" , "Title"%><br>
      <%= f.text_field "title" %>
    </div>
    <div class="form-group">
      <%= f.label "venue", "Venue" %><br>
      <%= f.text_field "venue" %>
    </div>

    <div class="form-group">
      <%= f.label "event_image", "Event image" %><br>
      <%= f.text_field "event_image" %>
    </div>

      <select name="user[organizer_id]">
    <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.fname %></option>
    <% end %>
  </select>




    <div id="add_bottle_form" class="form-group">
      <%= f.label "bottle_id", "Select Bottles" %>
      <%= f.fields_for :flights do |builder| %>
        <%= builder.collection_select :bottle_id, Bottle.all, :id, :name, {:include_blank => false}, {multiple: true} %>
     <% end %>
    </div>

    <div class="form-group-spec">
      <div class="fgs">
        <%= f.label "date", "Date (when?)" %>
        <%= f.date_field "date" %>
      </div>
      <div class="fgs">
        <%= f.label "duration" ,"Duration (minutes)"%>
        <%= f.text_field "duration" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label "description", "Tell me a little bit more about your event" %><br>
      <%= f.text_area "description" %>
    </div>
    
    <div class="form-group submit-button">
      <%= f.submit "Submit" %>
    </div>
  
  <% end %>
</div>