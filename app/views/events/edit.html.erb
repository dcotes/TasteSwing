<h3>Edit This Event</h3>
<%= form_for @event do |f| %>

  <% if @event.errors.any? %>
    <div>
      <%= pluralize(@event.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "title" , "Title"%><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "venue", "Where?" %><br>
    <%= f.text_field "venue" %>
  </div>
  <div>
    <%= f.label "date", "When?" %><br>
    <%= f.date_field "date" %>
  </div>
  <div>
    <%= f.label "duration" ,"what time?"%><br>
    <%= f.time_field "duration" %>
  </div>
  <div>
    <%= f.label "description", "Tell me a little bit more about your event" %><br>
    <%= f.text_area "description" %>
  </div>
  <hr> 
  <div><%= f.submit "Submit" %></div>
<% end %>
