<div class="outer">
<div class ="center_with_shift">
<div><h1>Lets get you started...</h1></div>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div class="center_with_shift">
      <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<table class="table-minimal">
l
 
  <tbody>
    <tr>
      <td><%= f.label "email" %></td>
      <td><%= f.text_field "email" %></td>
    </tr>
    <tr>
      <td><%= f.label "fname", "First Name" %></td>
      <td><%= f.text_field "fname" %></td>
    </tr>
    <tr>
      <td><%= f.label "lname", "Last Name" %></td>
      <td><%= f.text_field "lname" %></td>
    </tr>
    <tr>
      <td><%= f.label "password" %></td>
      <td><%= f.password_field "password" %></td>
    </tr>
    <tr>
        <td><%= f.label "Re-type password" %></td>
      <td><%= f.password_field "password_confirmation" %></td>
    </tr>
    <tr>
      <td><%= f.label "avatar_url", "Profile image (url)" %></td>
      <td> <%= f.text_field "avatar_url" %></td>
    </tr>
     <tr>
      <td><%= f.label "description", "Profile description" %></td>
      <td><%= f.text_area "description" %></td>
    </tr>
     <tr>
      <td> <%= f.label "birthday", "Birthday" %></td>
      <td> <%= f.date_field "birthday" %></td>
    </tr>
  </tbody>
</table>
<div>
<div class="">
<img id="uploadedImage" src="" alt="" class="img-rounded" style="max-width: 200px" placeholder="image\n uploaded"/>
</div>
