<div id="profile-page">

	<div id="edit-profile">
		<button><%= link_to "edit profile page", edit_user_path %></button>
	</div>
	
	<div id="header">

	 	<div id="social-icons">
			<button>Follow ME</button>
			<button>Twitter</button>
			<button>Facebook</button>
			<button>GooglePlus</button>
		</div>

		<div id="social-image"> 
			<img src="<%= @user.avatar_url %>" alt="profile picture">
		</div>

	</div>

	<div id="middle">

		<div id="personal">
			<h1><%= @user.full_name %></h1>
		  <dl>
		    <dt>
		    <h2><%= @user.age %> | <%= @user.region %></h2>
		    <p><%= @user.description %></p><br/>
		    <p><%= @user.email %></p>
		    </dt>
		  </dl>
		</div>


		<div id="my-event-collection">
			<h2>My Events</h2>
			<% if @user.events.all == [] %>
				<p>"no events created"</p>
			<% else %>
				<% @user.events.each do |event| %>
				<h3><%= link_to event.event_title, event_path(event) %></h3>
				<% end %>
			<% end %>
		</div>
	</div>

	<div id="bottles-events-section">

		<div id="bottles">
			<p>5 recently added bottles</p>
			<strong>needs the connection through reviews to create new bottle.</strong>
		</div>
		
		<div id="events">
			<p>2 links to future events</p>
			
			<p>link to recent events</p>

			<button><%= link_to "Add a event", new_event_path %></button>
		</div>
	
	</div>


</div>