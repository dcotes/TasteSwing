<h3>Add New Bottle of Wine</h3>
<%= form_for @bottle do |f| %>
  <% if @bottle.errors.any? %>
    <div>
      <%= pluralize(@bottle.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @bottle.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label "name" , "Bottle name"%><br>
    <%= f.text_field "name" %>
  </div>
  <div>
    <%= f.label "grape", "Grape" %><br>
    <%= f.text_field "grape" %>
  </div>
  <div>
    <%= f.label "vintage", "vintage" %><br>
    <%= f.date_field "vintage" %>
  </div>
  <div>
    <%= f.label "winery" ,"winery"%><br>
    <%= f.text_field "winery" %>
  </div>
  <div>
    <%= f.label "description", "Tell me a little bit more about your event" %><br>
    <%= f.text_area "description" %>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>